  <div id="flash">
    <%= flash[:notice] %>
  </div>



  <div id="sudoku">
    <form action='/' method='post'>
    <% 3.times do |row| %>
      <div class='row'>
        <% 3.times do |box| %>
          <div class="box">
          <% 3.times do |cell_row| %>
            <div class="cell-row">
              <% 3.times do |cell| %>
                <%= partial :cell, :locals => {:cell_index => row*27+box*3+cell_row*9+cell} %>
              <% end %>
            </div>
          <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
    
    <div class="menu">
      <button class='btn' name='check' value='true'>Check</button><button class='btn' name='check' value='false'>Save</button> <button class='btn' name='restart' value='true'>Restart</button>   
    </form>
      <form action='/solution' method='get'>
    <button class='btn' >Show Solution</button>
    </div>
    </form>

  </div>
