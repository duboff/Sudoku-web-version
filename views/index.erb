<html>
<head>
  <title>Sudoku</title>
  <link href='/stylesheets/application.css' rel='stylesheet' type='test/css'>

</head>
<body>
  <h1>Life is too short to play Sudoku</h1>
  <div id="sudoku">
    <form action='/' method='post'>
  <!-- one div for each row -->
  <% 3.times do |row| %>
    <div class='row'>
        <!-- we want to create separate div elements for boxes to style them using CSS -->
      <% 3.times do |box| %>
          <div class="box">
         <!-- each box will have nine cells -->
         <% 3.times do |cell_row| %>
              <div class="cell-row">
             <% 3.times do |cell| %>
               <%= partial :cell, :locals=>{:cell_index => row*27+box*3+cell_row*9+cell} %>
                <% end %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
    <button>Check solution</button>
  </div>
</body>
</html>